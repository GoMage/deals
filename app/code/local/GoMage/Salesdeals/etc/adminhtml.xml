<config>
    <acl>
        <resources>
            <admin>
                <children>
                    <system>
                        <children>
                            <config>
                                <children>
                                    <gomage_activation/>
                                </children>
                            </config>
                        </children>
                    </system>
                </children>
            </admin>
        </resources>
    </acl>    
    <acl>
        <resources>
            <admin>
                <children>
                    <promo>
                      <children>                                                    
                         <gomage_salesdeals>
                         	<children>
                         		<gomage_manage_salesdeals/>
                         		<gomage_manage_deal_blocks/>
                         	</children>	
                         </gomage_salesdeals>	                    
                      </children>
                    </promo>
                </children>
            </admin>
        </resources>
    </acl>
    <acl>
        <resources>
            <admin>
                <children>
                    <system>
                        <children>
                            <config>
                                <children>
                                    <gomage_notification>
                                        <title>GoMage - Notifications</title>
                                    </gomage_notification>
                                </children>
                            </config>
                        </children>
                    </system>
                </children>
            </admin>
        </resources>
    </acl>     
</config>
